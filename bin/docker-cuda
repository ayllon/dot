#!/bin/sh

IMAGE="docker.io/nvidia/cuda"
TAG="10.0-cudnn7-devel"
NAME="cuda"
VOLUMES=(
    "/home/aalvarez"
    "/tmp/.X11-unix"
)
DEVICES=(
    "/dev/video*"
)

while [[ "$1" != "" ]]; do
    case $1 in
        -n|--name)
            shift 1
            NAME=$1
        ;;
        -t|--tag)
            shift 1
            TAG=$1
        ;;
        -i|--image)
            shift 1
            IMAGE=$1
        ;;
        *)
            echo "Unknown argument $0"
            exit 1
        ;;
    esac
    shift
done

echo "# NAME  = ${NAME}"
echo "# IMAGE = ${IMAGE}"
echo "# TAG   = ${TAG}"

EXISTS=0
docker ps -a --format "{{.Names}}" | grep "${NAME}" > /dev/null
if [ $? -eq 0 ]; then
    EXISTS=1
fi
RUNNING=0
docker ps --format "{{.Names}}" | grep "${NAME}" > /dev/null
if [ $? -eq 0 ]; then
    RUNNING=1
fi

if [ $EXISTS -eq 0 ]; then
    echo "Deploying new ${NAME}"
    FLAGS="--privileged --name ${NAME} -ti"
    for v in ${VOLUMES[@]}; do
        FLAGS="${FLAGS} -v $v:$v"
    done
    for d in ${DEVICES[@]}; do
        FLAGS="${FLAGS} --device $d"
    done

    docker run ${FLAGS} "${IMAGE}:${TAG}"
elif [ $RUNNING -eq 0 ]; then
    echo "Container ${NAME} already exists, but is stopped"
    docker start -i ${NAME}
else
    echo "Container ${NAME} is running, attaching a new shell"
    docker exec -ti --privileged ${NAME} bash
fi
